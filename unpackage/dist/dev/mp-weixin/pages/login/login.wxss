page {
  background-color: #fff;
}
.login .container {
  padding: 100rpx;
}
.login .container .logo {
  width: 380rpx;
  height: 380rpx;
}
.login .container .form {
  margin-top: 160rpx;
  width: 100%;
}
.login .container .form .cu-form-group {
  background: #fff;
  margin-top: 30rpx;
  border-radius: 100rpx;
  padding: 20rpx 40rpx;
  font-size: 36rpx;
  color: #94afce;
  border: 1rpx solid #DDDDDD;
}
.login .container .form .cu-form-group input {
  height: 50rpx;
  line-height: 50rpx;
}
.login .container .form .zai-btn {
  background: #ffcb57;
  color: #fff;
  border: 0;
  border-radius: 100rpx;
  font-size: 36rpx;
  margin-top: 90rpx;
}
.login .container .form .zai-label {
  font-size: 30rpx;
  color: #8799a3;
  text-align: right;
}
.login .container .form .zai-label.register {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  padding-bottom: calc(constant(safe-area-inset-bottom) / 2);
  padding-bottom: calc(env(safe-area-inset-bottom) / 2);
}
