.my .container {
  padding-top: 30%;
}
.my .container .head {
  position: relative;
  border-radius: 10rpx;
}
.my .container .head .head-con {
  margin-top: -80rpx;
}
.my .container .head .head-con .head-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.my .container .head .head-content {
  margin-top: -80rpx;
}
.my .container .head .head-content .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.my .container .head .head-content view {
  line-height: 1.4;
}
.my .container .head .info .item {
  position: relative;
}
.my .container .head .info .item::after {
  content: "";
  position: absolute;
  width: 100%;
  height: 50%;
  left: 0;
  top: 25%;
  border-right: 1rpx solid #a1a1a1;
}
.my .container .head .info .item:last-child::after {
  display: none;
}
.my .container .head .info .item view {
  line-height: 1.3;
}
.my .cu-list.menu .cu-item::after {
  left: 30rpx;
  width: calc(200% - 30rpx);
}
.my .cu-list.menu .cu-item.arrow::before {
  color: #929292;
}

