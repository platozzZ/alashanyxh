.order .nav-container {
  height: 90rpx;
}
.order .nav-container .nav {
  position: fixed;
  z-index: 1024;
}
.order .nav-container .nav .cu-item {
  position: relative;
}
.order .nav-container .nav .cu-item.cur {
  border: 0;
}
.order .nav-container .nav .cu-item.cur::after {
  position: absolute;
  bottom: 0;
  left: 25%;
  box-sizing: border-box;
  width: 50%;
  height: 6rpx;
  background-color: #F9C623;
  border-radius: 10rpx;
  border-radius: inherit;
  content: " ";
  -webkit-transform-origin: 0 0;
          transform-origin: 0 0;
  pointer-events: none;
}
.order .cu-card > .cu-item {
  margin-top: 20rpx;
}
.order .cu-card > .cu-item:first-child {
  margin-top: 0;
}
.order .cu-card > .cu-item .title {
  padding: 0 30rpx 30rpx;
  font-weight: normal;
}
.order .cu-card > .cu-item .title .order-title {
  font-weight: 550;
}
.order .cu-card > .cu-item .title .order-status {
  width: 120rpx;
}
.order .cu-card > .cu-item .title .order-status.list-status20 {
  color: #45d64b;
}
.order .cu-card > .cu-item .title .order-status.list-status30 {
  color: #adb5ad;
}
.order .cu-card > .cu-item .content .order-image {
  width: 150rpx;
  height: 150rpx;
}
.order .cu-card > .cu-item .content .desc > view {
  color: #666;
  font-size: 26rpx;
  line-height: 1.4;
}
.order .emptyContainer {
  position: fixed;
  top: 40%;
  left: 50;
  width: 100%;
  text-align: center;
}

